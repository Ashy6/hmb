<!--    weight;-->
<!--    target;-->
    <insert id="addUserInfo">
        INSERT INTO userinfo (sex,birthdayd,height,weight,target) VALUE (#{sex},#{birthday},#{height},#{weight},#{target})
    </insert>
</mapper>
