<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mapper的命名空间: 规定指定mybatis的映射xml文件-->
<mapper namespace="com.hellomybody.hmb.dao.DaoUserInfo">
    <!--查询用户信息-->
    <select id="getUserInfoMassage" resultType="com.hellomybody.hmb.bean.UserInfo">  <!--  resultType 为回的方法  -->
        SELECT * FROM userinfo WHERE
        username=#{username} AND id=(select MAX(id) from userinfo)
    </select>
    <!--增加用户表时，同时增加用户信息表里的username-->
    <insert id="addUserInfoName">
        INSERT INTO userinfo (username,sex,birthday,ages,height,weight,target,timesss)
        VALUE (#{username},#{sex},#{birthday},#{ages},#{height},#{weight},#{target},#{timesss})
    </insert>

    <!--    更新操作-->
    <update id="updateUserInfo">
        UPDATE userinfo SET sex=#{sex} WHERE username = #{username}
    </update>
<!--    username;-->
